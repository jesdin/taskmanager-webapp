@page
@model TaskManagerApp.Pages.MyTasks.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2 class="display-4">Edit my Task</h2>

<br />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MyTask.ID" />
            <div class="form-group">
                <label asp-for="MyTask.Title" class="control-label"></label>
                <input asp-for="MyTask.Title" class="form-control" />
                <span asp-validation-for="MyTask.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MyTask.Description" class="control-label"></label>
                <input asp-for="MyTask.Description" class="form-control" />
                <span asp-validation-for="MyTask.Description" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding-left:20px">
                <div class="checkbox">
                    <label>
                        <input asp-for="MyTask.IsCompleted" /> Completed
                    </label>
                </div>
            </div>
            <div class="form-group" style="padding-left:20px">
                <div class="checkbox">
                    <label>
                        <input asp-for="MyTask.IsHighPriority" /> High Priority
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save Changes" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
